{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h1>Modifier le manga</h1>
    <form method="post" class="mt-4">
        <div class="form-group">
            <label for="titre">Titre</label>
            <input type="text" id="titre" name="titre" class="form-control" value="{{ manga.titre }}" required>
        </div>
        <div class="form-group">
            <label for="auteur">Auteur</label>
            <input type="text" id="auteur" name="auteur" class="form-control" value="{{ manga.auteur }}" required>
        </div>
        <div class="form-group">
            <label for="date_sortie">Date de sortie</label>
            <input type="date" id="date_sortie" name="date_sortie" class="form-control" value="{{ manga.dateSortie|date('Y-m-d') }}" required>
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" class="form-control" rows="4" required>{{ manga.description }}</textarea>
        </div>
        <div class="form-group">
            <label for="image">Image (URL)</label>
            <input type="text" id="image" name="image" class="form-control" value="{{ manga.image }}">
        </div>
        <div class="form-group">
            <label for="genre_id">Genre</label>
            <select id="genre_id" name="genre_id" class="form-control" required>
                {% for genre in genres %}
                    <option value="{{ genre.id }}" {% if genre.id == manga.genre.id %}selected{% endif %}>
                        {{ genre.nom }}
                    </option>
                {% endfor %}
            </select>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Enregistrer</button>
        <a href="{{ path('manga_index') }}" class="btn btn-secondary mt-3">Retour</a>
    </form>
</div>
{% endblock %}
