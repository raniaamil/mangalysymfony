{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/resetpassword/reset.css') }}">
{% endblock %}

{% block body %}
  <div class="formregister">
    <div class="signup-container">
      <h1 class="signup-title">Réinitialisez votre mot de passe</h1>
      
      {{ form_start(resetForm, {'attr': {'class': 'signup-form'}}) }}
          {{ form_row(resetForm.plainPassword) }}
          <button type="submit" class="signup-btn">Réinitialiser le mot de passe</button>
      {{ form_end(resetForm) }}
    </div>
  </div>
{% endblock %}
