{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/resetpassword/request.css') }}">
{% endblock %}

{% block body %}
    <div class="formreset">
        <div class="reset-container">
            <h1 class="reset-title">Mot de passe oublié</h1>
            <p>Veuillez entrer votre email pour réinitialiser votre mot de passe</p>
            
            {# Affichage d'éventuels messages d'erreur flash (du controller) #}
            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}

            {# Démarrage du formulaire Symfony en lui appliquant la classe reset-form #}
            {{ form_start(requestForm, {'attr': {'class': 'reset-form'}}) }}
                
                {# On rend le champ email avec un label personnalisé ou avec le placeholder 
                   pour correspondre à votre design statique. Ici, on désactive le label et on 
                   ajoute un placeholder. #}
                {{ form_row(requestForm.email, {
                    'label': 'Votre Email',
                    'attr': {'placeholder': 'Email'}
                }) }}
                
                <button type="submit" class="reset-btn">Envoyer</button>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}
