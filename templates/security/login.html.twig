{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/connexion.css') }}">
{% endblock %}

{% block body %}
    <div class="formregister">
        <div class="signup-container">
            <h1 class="signup-title">Connexion</h1>
            <form method="post" action="{{ path('app_login') }}" class="signup-form">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <input type="email" name="_username" placeholder="Adresse e-mail" value="{{ last_username }}" required>
                <input type="password" name="_password" placeholder="Mot de passe" required>
                <div class="terms">
                    <input type="checkbox" id="terms" name="remember_me">
                    <label for="terms">Se souvenir de moi</label>
                    <a href="/reset-password">Mot de passe oubli√© ?</a>
                </div>
                <button type="submit" class="signup-btn">Se connecter</button>
            </form>
            {# Affichage de l'erreur s'il y en a une #}
            {% if error %}
                <div class="alert alert-danger mt-3">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
            <p class="login-link">Pas encore de compte ? <a href="/register">S'inscrire</a></p>
        </div>
    </div>
{% endblock %}

