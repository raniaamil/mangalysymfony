{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Liste des articles</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                {% if is_granted('ROLE_ADMIN') %}
                    <th>ID</th>
                {% endif %}
                <th>Titre</th>
                <th>Contenu</th>
                <th>Genre</th>
                {% if is_granted('ROLE_ADMIN') %}
                    <th>Actions</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
            {% for article in articles %}
                <tr>
                    {% if is_granted('ROLE_ADMIN') %}
                        <td>{{ article.id }}</td>
                    {% endif %}
                    <td>
                        <a href="{{ path('articles_show', {id: article.id}) }}">{{ article.titre }}</a>
                    </td>
                    <td>{{ article.contenu|slice(0, 50) }}...</td> {# Affiche un aperçu du contenu #}
                    <td>{{ article.genre }}</td>
                    {% if is_granted('ROLE_ADMIN') %}
                        <td>
                            <a href="{{ path('articles_edit', {id: article.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
                            <form action="{{ path('articles_delete', {id: article.id}) }}" method="post" style="display: inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?');">Supprimer</button>
                            </form>
                        </td>
                    {% endif %}
                </tr>
            {% else %}
                <tr>
                    <td colspan="{% if is_granted('ROLE_ADMIN') %}4{% else %}3{% endif %}" class="text-center">Aucun article trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <!-- Bouton pour ajouter un article -->
    {% if is_granted('ROLE_ADMIN') %}
        <div class="mb-3">
            <a href="{{ path('articles_new') }}" class="btn btn-success">Ajouter un article</a>
        </div>
    {% endif %}
</div>
{% endblock %}
