{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Liste des posts</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                {% if is_granted('ROLE_ADMIN') %}
                    <th>ID</th>
                {% endif %}
                <th>Titre</th>
                <th>Contenu</th>
                <th>Manga</th>
                <th>Genre</th>
                <th>Par</th> {# Nouvelle colonne pour afficher le nom de l'utilisateur #}
                <th>Date de publication</th> {# Nouvelle colonne pour la date #}
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <th>Actions</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
            {% for post in posts %}
                <tr>
                    {% if is_granted('ROLE_ADMIN') %}
                        <td>{{ post.id }}</td>
                    {% endif %}
                    <td>
                        <a href="{{ path('post_show', {id: post.id}) }}">{{ post.titre }}</a>
                    </td>
                    <td>{{ post.contenu|slice(0, 50) }}...</td>
                    <td>{{ post.manga.titre }}</td> 
                    <td>{{ post.genre }}</td>   
                    <td>{{ post.user.username }}</td> 
                    <td>{{ post.datePublication|date('d/m/Y H:i') }}</td> {# Affiche la date au format français #}
                    {% if app.user and app.user.id == post.user.id %}
                        <td>
                            <a href="{{ path('post_edit', {id: post.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
                            <form action="{{ path('post_delete', {id: post.id}) }}" method="post" style="display: inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce post ?');">Supprimer</button>
                            </form>
                        </td>
                    {% endif %}
                </tr>
            {% else %}
                <tr>
                    <td colspan="{% if is_granted('IS_AUTHENTICATED_FULLY') %}4{% else %}3{% endif %}" class="text-center">Aucun post trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <!-- Bouton pour ajouter un post -->
    <div class="mb-3">
        <a href="{{ path('post_new') }}" class="btn btn-success">Ajouter un post</a>
    </div>
</div>
{% endblock %}
