{% extends 'base.html.twig' %}

{% block title %}D√©tails de la critique{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>{{ critique.titre }}</h1>
    <p>{{ critique.contenu }}</p>

    <h3>Manga</h3>
    <p>{{ critique.manga.titre }}</p>

    <h3>Genre</h3>
    <p>{{ critique.manga.genre.nom }}</p>

    <h3>Date de publication</h3>
    <p>{{ critique.datePublication|date('d/m/Y H:i') }}</p> 

    <div>
        <form method="post" action="{{ path('like_toggle') }}" class="like-form">
            <input type="hidden" name="id" value="{{ critique.id }}">
            <input type="hidden" name="type" value="critique">
            <button type="submit" class="btn btn-like">
                {% if isLiked %}
                    ‚ù§Ô∏è Unlike
                {% else %}
                    ü§ç Like
                {% endif %}
            </button>
        </form>
    </div>

    <script>
        document.querySelectorAll('.like-form').forEach(form => {
            form.addEventListener('submit', function(event) {
                event.preventDefault();
                const formData = new FormData(this);

                fetch(this.action, {
                    method: 'POST',
                    body: formData
                })
                .then(response => response.json())
                .then(data => {
                    alert(data.message);
                    location.reload(); // Recharge la page pour afficher la mise √† jour
                });
            });
        });
    </script>

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="mt-4">
            <a href="{{ path('critiques_edit', {id: critique.id}) }}" class="btn btn-primary">Modifier</a>
            <form method="post" action="{{ path('critiques_delete', {id: critique.id}) }}" style="display: inline;" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cette critique ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ critique.id) }}">
                <button class="btn btn-danger">Supprimer</button>
            </form>
        </div>
    {% endif %}

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <form method="post" action="{{ path('critiques_report', {id: critique.id}) }}" style="display: inline;">
            <input type="hidden" name="_token" value="{{ csrf_token('report' ~ critique.id) }}">
            <button type="submit" class="btn btn-warning" onclick="return confirm('Voulez-vous signaler cette critique ?');">
                Signaler
            </button>
        </form>
    {% endif %}


    <div class="mt-4">
        <a href="{{ path('critiques_index') }}" class="btn btn-secondary">Retour aux critiques</a>
    </div>

    <!-- Section des Commentaires -->
    <div class="mt-5">
        <h2>Commentaires</h2>
        <ul class="list-group">
            {% for commentaire in critique.commentaires %}
                <li class="list-group-item">
                    <strong>{{ commentaire.user.username }}</strong> le {{ commentaire.datePublication|date('d/m/Y H:i') }} :
                    <p>{{ commentaire.contenu }}</p>

                    <!-- Boutons Modifier / Supprimer (Seulement pour l'auteur du commentaire) -->
                    {% if app.user and app.user.id == commentaire.user.id %}
                        <div class="mt-2">
                            <!-- Lien pour modifier le commentaire -->
                            <a href="{{ path('commentaire_edit', {id: commentaire.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
                            
                            <!-- Formulaire pour supprimer le commentaire -->
                            <form method="post" action="{{ path('commentaire_delete', {id: commentaire.id}) }}" style="display: inline;" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer ce commentaire ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commentaire.id) }}">
                                <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                            </form>
                        </div>
                    {% endif %}
                    
                    <!-- Bouton de signalement de commentaire -->
                    <form method="post" action="{{ path('commentaire_report', {id: commentaire.id}) }}" style="display: inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('report' ~ commentaire.id) }}">
                        <button type="submit" class="btn btn-warning btn-sm" onclick="return confirm('Voulez-vous signaler ce commentaire ?');">
                            Signaler
                        </button>
                    </form>
                </li>
            {% else %}
                <li class="list-group-item text-center">Aucun commentaire pour cette critique.</li>
            {% endfor %}
        </ul>
    </div>

    <!-- Formulaire pour Ajouter un Commentaire (Seulement pour utilisateurs connect√©s) -->
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="mt-4">
            <h3>Ajouter un commentaire</h3>
            <form method="post" action="{{ path('commentaire_new', {entity: 'critiques', id: critique.id}) }}">
                <div class="form-group">
                    <label for="contenu">Votre commentaire</label>
                    <textarea id="contenu" name="contenu" class="form-control" rows="3" required></textarea>
                </div>
                <button type="submit" class="btn btn-success mt-2">Publier</button>
            </form>
        </div>
    {% else %}
        <p class="mt-3">Veuillez <a href="{{ path('app_login') }}">vous connecter</a> pour ajouter un commentaire.</p>
    {% endif %}
</div>
{% endblock %}
