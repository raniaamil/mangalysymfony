{% extends 'base.html.twig' %}

{% block title %}Détails de la critique{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>{{ critique.titre }}</h1>
    <p>{{ critique.contenu }}</p>

    <h3>Genre</h3>
    <p>{{ critique.genre }}</p>

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="mt-4">
            <a href="{{ path('critiques_edit', {id: critique.id}) }}" class="btn btn-primary">Modifier</a>
            <form method="post" action="{{ path('critiques_delete', {id: critique.id}) }}" style="display: inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette critique ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ critique.id) }}">
                <button class="btn btn-danger">Supprimer</button>
            </form>
        </div>
    {% endif %}

    <div class="mt-4">
        <a href="{{ path('critiques_index') }}" class="btn btn-secondary">Retour à la liste</a>
    </div>

    <!-- Section des Commentaires -->
    <div class="mt-5">
        <h2>Commentaires</h2>
        <ul class="list-group">
            {% for commentaire in critique.commentaires %}
                <li class="list-group-item">
                    <strong>{{ commentaire.user.username }}</strong> le {{ commentaire.datePublication|date('d/m/Y H:i') }} :
                    <p>{{ commentaire.contenu }}</p>

                    <!-- Boutons Modifier / Supprimer (Seulement pour l'auteur du commentaire) -->
                    {% if app.user and app.user.id == commentaire.user.id %}
                        <div class="mt-2">
                            <!-- Lien pour modifier le commentaire -->
                            <a href="{{ path('commentaire_edit', {id: commentaire.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
                            
                            <!-- Formulaire pour supprimer le commentaire -->
                            <form method="post" action="{{ path('commentaire_delete', {id: commentaire.id}) }}" style="display: inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commentaire.id) }}">
                                <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                            </form>
                        </div>
                    {% endif %}
                </li>
            {% else %}
                <li class="list-group-item text-center">Aucun commentaire pour cette critique.</li>
            {% endfor %}
        </ul>
    </div>

    <!-- Formulaire pour Ajouter un Commentaire (Seulement pour utilisateurs connectés) -->
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="mt-4">
            <h3>Ajouter un commentaire</h3>
            <form method="post" action="{{ path('commentaire_new', {id: critique.id}) }}">
                <div class="form-group">
                    <label for="contenu">Votre commentaire</label>
                    <textarea id="contenu" name="contenu" class="form-control" rows="3" required></textarea>
                </div>
                <button type="submit" class="btn btn-success mt-2">Publier</button>
            </form>
        </div>
    {% else %}
        <p class="mt-3">Veuillez <a href="{{ path('app_login') }}">vous connecter</a> pour ajouter un commentaire.</p>
    {% endif %}
</div>
{% endblock %}
