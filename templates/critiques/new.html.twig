{% extends 'base.html.twig' %}

{% block title %}Ajouter une Critique{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/critique/newcritique.css') }}">
{% endblock %}

{% block body %}
    <div class="manga-review-container">
        <form class="review-form" method="post">
            <label for="review-title">Titre de la critique :</label>
            <input type="text" id="review-title" name="review-title" placeholder="Ex : Une aventure Ã©poustouflante..." required>
            
            <label for="review-manga">Manga :</label>
            <input type="text" id="review-manga" name="review-manga" placeholder="Ex : Naruto" required>
            
            <label for="review-rating">Note (entre 1 et 5) :</label>
            <input type="number" id="review-rating" name="review-rating" step="0.1" min="1" max="5" placeholder="Ex : 4.5" required>
            
            <label for="review-text">Votre critique :</label>
            <textarea id="review-text" name="review-text" rows="6" placeholder="Exprimez votre avis ici..." required></textarea>
            
            <div class="form-buttons">
                <button type="submit" class="submit-btn">Publier</button>
                <button type="button" class="cancel-btn" onclick="window.history.back();">Annuler</button>
            </div>
        </form>
    </div>
{% endblock %}

{% block javascripts %}
    <script defer src="{{ asset('js/critique/newcritique.js') }}"></script>
{% endblock %}
