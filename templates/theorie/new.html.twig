{% extends 'base.html.twig' %}

{% block title %}Ajouter une Théorie{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/theories/newtheorie.css') }}">
{% endblock %}

{% block body %}
<main class="manga-post-container">
    <form method="post" enctype="multipart/form-data" class="post-form">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('theorie_new') }}">

        <label for="theorie-title">Titre de la théorie :</label>
        <input type="text" id="theorie-title" name="titre" 
               placeholder="Ex : Naruto est-il immortel ?" 
               required minlength="5" maxlength="255">

        <label for="theorie-manga">Manga :</label>
        <select id="theorie-manga" name="manga" required style="height: 40px;">
            <option value="" disabled selected>Sélectionnez un manga</option>
            {% for manga in mangas %}
                <option value="{{ manga.titre }}">{{ manga.titre }}</option>
            {% endfor %}
        </select>

        <label for="theorie-text">Votre théorie :</label>
        <textarea id="theorie-text" name="contenu" rows="6" 
                  placeholder="Développez votre théorie ici..." 
                  required minlength="50"></textarea>

        <label for="theorie-media">Média (URL) :</label>
        <input type="url" id="theorie-media" name="media" 
               placeholder="URL d'une image" 
               pattern="https?://.+" title="Entrez une URL valide">

        <div class="form-buttons">
            <button type="submit" class="submit-btn">Publier</button>
            <button type="button" class="cancel-btn" onclick="window.history.back();">Annuler</button>
        </div>
    </form>
</main>
{% endblock %}

