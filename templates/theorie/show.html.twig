{% extends 'base.html.twig' %}

{% block title %}Détails de la théorie{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>{{ theorie.titre }}</h1>
    <p>{{ theorie.contenu }}</p>

    <h3>Média</h3>
    {% if media_base64 %}
        <div>
            <p>Type: {{ theorie.mediaType }}</p>
            {% if theorie.mediaType starts with 'image' %}
                <img src="data:{{ theorie.mediaType }};base64,{{ media_base64 }}" alt="Média associé" class="img-fluid" />
            {% elseif theorie.mediaType starts with 'video' %}
                <video controls class="w-100">
                    <source src="data:{{ theorie.mediaType }};base64,{{ media_base64 }}">
                    Votre navigateur ne supporte pas la lecture vidéo.
                </video>
            {% elseif theorie.mediaType starts with 'audio' %}
                <audio controls>
                    <source src="data:{{ theorie.mediaType }};base64,{{ media_base64 }}">
                    Votre navigateur ne supporte pas la lecture audio.
                </audio>
            {% endif %}
        </div>
    {% else %}
        <p>Aucun média associé</p>
    {% endif %}

    <h3>Manga</h3>
    <p>{{ theorie.manga.titre }}</p>

    <h3>Date de publication</h3>
    <p>{{ theorie.datePublication|date('d/m/Y H:i') }}</p>

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="mt-4">
            <a href="{{ path('theorie_edit', {id: theorie.id}) }}" class="btn btn-primary">Modifier</a>
            <form method="post" action="{{ path('theorie_delete', {id: theorie.id}) }}" style="display: inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette théorie ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ theorie.id) }}">
                <button class="btn btn-danger">Supprimer</button>
            </form>
        </div>
    {% endif %}

    <div class="mt-4">
        <a href="{{ path('theorie_index') }}" class="btn btn-secondary">Retour aux théories</a>
    </div>

    <!-- Section des Commentaires -->
    <div class="mt-5">
        <h2>Commentaires</h2>
        <ul class="list-group">
            {% for commentaire in theorie.commentaires %}
                <li class="list-group-item">
                    <strong>{{ commentaire.user.username }}</strong> le {{ commentaire.datePublication|date('d/m/Y H:i') }} :
                    <p>{{ commentaire.contenu }}</p>

                    <!-- Boutons Modifier / Supprimer (Seulement pour l'auteur du commentaire) -->
                    {% if app.user and app.user.id == commentaire.user.id %}
                        <div class="mt-2">
                            <!-- Lien pour modifier le commentaire -->
                            <a href="{{ path('commentaire_edit', {id: commentaire.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
                            
                            <!-- Formulaire pour supprimer le commentaire -->
                            <form method="post" action="{{ path('commentaire_delete', {id: commentaire.id}) }}" style="display: inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commentaire.id) }}">
                                <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                            </form>
                        </div>
                    {% endif %}
                </li>
            {% else %}
                <li class="list-group-item text-center">Aucun commentaire pour cette théorie.</li>
            {% endfor %}
        </ul>
    </div>

    <!-- Formulaire pour Ajouter un Commentaire (Seulement pour utilisateurs connectés) -->
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="mt-4">
            <h3>Ajouter un commentaire</h3>
            <form method="post" action="{{ path('commentaire_new', {entity: 'theorie', id: theorie.id}) }}">
                <div class="form-group">
                    <label for="contenu">Votre commentaire</label>
                    <textarea id="contenu" name="contenu" class="form-control" rows="3" required></textarea>
                </div>
                <button type="submit" class="btn btn-success mt-2">Publier</button>
            </form>
        </div>
    {% else %}
        <p class="mt-3">Veuillez <a href="{{ path('app_login') }}">vous connecter</a> pour ajouter un commentaire.</p>
    {% endif %}
</div>
{% endblock %}
